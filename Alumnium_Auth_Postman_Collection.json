    "item": [
        {
            "name": "Authentication (تسجيل ودخول)",
            "item": [
                {
                    "name": "Register (إنشاء حساب جديد)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Ahmed User\",\n    \"email\": \"client@example.com\",\n    \"mobile\": \"0512345678\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"uuid\": \"device-uuid-123\",\n    \"device_token\": \"fcm-token-here\",\n    \"device_type\": \"android\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/user-auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "user-auth",
                                "register"
                            ]
                        },
                        "description": "لإنشاء حساب مستخدم جديد.\n- يسمح بتكرار رقم الجوال.\n- البريد الإلكتروني يجب أن يكون غير مستخدم من قبل."
                    },
                    "response": []
                },
                {
                    "name": "Login (تسجيل الدخول)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"login\": \"client@example.com\",\n    \"password\": \"password123\",\n    \"uuid\": \"device-uuid-123\",\n    \"device_token\": \"fcm-token-here\",\n    \"device_type\": \"android\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
